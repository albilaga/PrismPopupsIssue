<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismPopupsIssue.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prismPopupsIssue="clr-namespace:PrismPopupsIssue"
    x:DataType="prismPopupsIssue:MainPageViewModel">
    <VerticalStackLayout Spacing="8" VerticalOptions="Center">
        <Button
            Command="{Binding OpenPopupCommand, Mode=OneTime}"
            HorizontalOptions="Center"
            Text="Open Popup From Prism" />
        <Button
            Command="{Binding OpenPopupFromMopupsCommand, Mode=OneTime}"
            HorizontalOptions="Center"
            Text="Open Popup From Mopups" />
        <Button
            Command="{Binding OpenPopupDialogCommand, Mode=OneTime}"
            HorizontalOptions="Center"
            Text="Open Popup From Dialog" />
    </VerticalStackLayout>
</ContentPage>
